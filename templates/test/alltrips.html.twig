{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>Test index</h1>
    <a href="/logout">Logout</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td>{{ trip.id }}</td>
                <td>{{ trip.name }}</td>
                {# <td>{{ trip.price }}</td> #}
                <td>
                    <a href="{{ path('app_test_index_createtrips')}}">new trip</a>
                    <a href="{{ path('app_test_edit', {'id': trip.id}) }}">edit</a>
                </td>
            </tr>
