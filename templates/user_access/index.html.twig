{% extends 'base.html.twig' %}

{% block title %}Hello UserAccessController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div
		class="container">
		{# <h1>Hello {{ controller_name }}! âœ…</h1> #}

		Pick your trip
		<div class="row row-cols-3 gap-2">

		{% for trip  in trips %}

				<div class="card" style="width: 18rem;">
					<img src="{{trip.image}}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{trip.name}}</h5>
						<p class="card-text">{{trip.description}}</p>
						<a href="/user/tripdetails/{{trip.id}}" class="btn btn-primary">Details</a>
						<a href="/details/{{trip.id}}" class="btn btn-primary">Join</a>
					</div>
				</div>
			
		{% endfor %}
        </div>

		<a href="/user/customer">Manage Your Details</a><br>

		<a href="/logout">Logout</a><br>
	</div>
{% endblock %}
